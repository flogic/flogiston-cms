= @template_obj.handle
= link_to 'edit', edit_admin_template_path(@template_obj)

- pages = @template_obj.pages
- unless pages.empty?
  %div
    Pages:
    %ul
      - pages.each do |page|
        %li= link_to page.path, edit_admin_page_path(page), :target => '_blank'

= render :partial => 'show', :locals => { :template_obj => @template_obj }
